# 生产环境配置示例
# 使用时复制为 .env.production 并填写实际值

DATABASE_URL="postgresql://username:password@host:5432/database"
JWT_SECRET="your-super-secure-secret-key-at-least-32-characters-long"
PORT=5000
NODE_ENV=production
JWT_REFRESH_SECRET="your-refresh-token-secret-key-at-least-32-characters"
CORS_ALLOWED_ORIGINS="https://yourdomain.com,https://www.yourdomain.com"
CORS_ALLOW_CREDENTIALS="true"

# Rate Limiting設定（生産環境）
# 本番環境では必ず有効化
RATE_LIMIT_ENABLED="true"
# 最大リクエスト数（15分間）- 認証済みユーザーは自動的に高い制限を受ける
RATE_LIMIT_MAX="100"
# タイムウィンドウ（ミリ秒、15分 = 900000ms）
RATE_LIMIT_WINDOW_MS="900000"
